
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .reset-password-container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
            width: 400px;
        }

            .reset-password-container h2 {
                margin-bottom: 20px;
                font-size: 24px;
                font-weight: bold;
                color: #333;
                text-align: center;
            }

            .reset-password-container .form-control {
                margin-bottom: 15px;
                padding: 10px;
                border-radius: 10px;
            }

            .reset-password-container .btn-primary {
                width: 100%;
                padding: 10px;
                border-radius: 10px;
            }
    </style>
    <title>Cấp lại mật khẩu</title>
</head>
<body>
    <div class="reset-password-container">
        <h2>Cấp lại mật khẩu</h2>
        @using (Html.BeginForm("caplaimatkhau", "ADMIN", FormMethod.Post))
        {
            <input type="hidden" name="id" value="@ViewBag.Id" />
            <input type="hidden" name="loai" value="@ViewBag.Loai" />
            <input type="password" class="form-control" name="newPassword" placeholder="Mật khẩu mới" required />
            <input type="password" class="form-control" name="confirmPassword" placeholder="Xác nhận mật khẩu" required />
            <button type="submit" class="btn btn-primary">Cấp lại mật khẩu</button>
        }
    </div>
</body>
</html>
