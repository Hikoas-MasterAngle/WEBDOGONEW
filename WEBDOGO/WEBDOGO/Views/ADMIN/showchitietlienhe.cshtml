@model WEBDOGO.Models.LIENHE
@{
 
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Quản Lý Sản Phẩm Theo Yêu Cầu</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/chitietquanlyyeucau.css")?v=@DateTime.Now.Ticks">
</head>
<body>
    <div class="container">
        <h2>Chi tiết liên hệ</h2>
        @using (Html.BeginForm())
        {
            <div class="form-row">
                <!-- Cột 1 -->
                <div class="form-column">
                    <div class="form-group" hidden>
                        <label>Mã nhân viên:</label>
                        @Html.TextBoxFor(m => m.MALIENHE, new { @readonly = "readonly" })
                    </div>

                    <div class="form-group">
                        <label>Mã Khách Hàng</label>
                        @Html.TextBoxFor(m => m.MAKHACHHANG, new { @readonly = "readonly" })
                    </div>

                    <div class="form-group">
                        <label>Tên Khách Hàng</label>
                        @Html.TextBoxFor(m => m.HOVATEN, new { @readonly = "readonly" })
                    </div>
                </div>

                <!-- Cột 2 -->
                <div class="form-column">
                    <div class="form-group">
                        <label for="Email">Email:</label>
                        @Html.TextBoxFor(m => m.EMAIL, new { @readonly = "readonly" })
                    </div>

                    <div class="form-group">
                        <label for="SDT">Số Điện Thoại:</label>
                        @Html.TextBoxFor(m => m.SDT, new { @readonly = "readonly" })
                    </div>


                    <div class="form-group">
                        <label for="loinhan">Lời nhắn:</label>
                        @Html.TextAreaFor(m => m.LOINHAN, new { @readonly = "readonly", @style = "height: 400px" })
                    </div>

                </div>
            </div>

            <div class="form-group full-width">
                <button onclick="location.href='@Url.Action("showtrangquanly","ADMIN")'" class="btn-save" style="background-color: mediumturquoise" type="button">Quay lại</button>
            </div>
        }
    </div>
</body>
</html>



