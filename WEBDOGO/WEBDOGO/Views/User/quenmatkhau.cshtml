@model WEBDOGO.Models.KHACHHANG
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quên Mật Khẩu</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <style>
        body {
            background: linear-gradient(135deg, #74ebd5, #9face6);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .all {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .khungdangnhap {
            background: #fff;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            position: relative;
        }

            .khungdangnhap h1 {
                font-size: 1.8rem;
                font-weight: 700;
                color: #343a40;
                margin-bottom: 1.5rem;
                text-align: center;
            }

        .input-box {
            position: relative;
            margin-bottom: 1.5rem;
        }

            .input-box input {
                padding: 0.75rem 2.5rem 0.75rem 1rem;
                border: 1px solid #ced4da;
                border-radius: 0.5rem;
                font-size: 1rem;
                transition: border-color 0.3s ease-in-out;
                width: 100%;
            }

                .input-box input:focus {
                    border-color: #0d6efd;
                    outline: none;
                    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
                }

            .input-box i {
                position: absolute;
                top: 50%;
                right: 1rem;
                transform: translateY(-50%);
                font-size: 1.2rem;
                color: #6c757d;
            }

        .btndangnhap {
            margin-top: 1rem;
        }

            .btndangnhap button {
                width: 100%;
                padding: 0.6rem;
                border: none;
                border-radius: 0.5rem;
                background-color: #0d6efd;
                color: white;
                font-weight: 600;
                transition: background-color 0.3s ease-in-out;
            }

                .btndangnhap button:hover {
                    background-color: #0b5ed7;
                }

        .text-danger {
            text-align: center;
            font-size: 0.95rem;
            margin-top: -0.5rem;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="all">
        @using (Html.BeginForm(new { @class = "khungdangnhap", @style = "height: 250px;" }))
        {
            <h1>Quên Mật Khẩu</h1>
            <div class="input-box">
                @Html.TextBoxFor(m => m.EMAIL, new { @type = "email", @placeholder = "Email", @name = "emailquenmk", @class = "form-control" })
                <i class='bx bx-envelope'></i>
            </div>
            if (ViewBag.thongbao != null)
            {
                <p class="text-danger">@ViewBag.thongbao</p>
            }
            <div class="btndangnhap">
                <button type="submit" class="btn btn-primary">Gửi</button>
            </div>
        }
    </div>
</body>
</html>
