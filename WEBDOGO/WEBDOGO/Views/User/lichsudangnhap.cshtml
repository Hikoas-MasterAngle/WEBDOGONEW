@model IEnumerable<WEBDOGO.Models.LICHSUDANGNHAP>

@{
    ViewBag.Title = "Lịch sử đăng nhập";
    Layout = "~/Views/Shared/_layouttrangchu.cshtml";
}

<div id="login-history-container" class="container my-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">📜 Lịch sử đăng nhập</h4>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr class="text-center">
                                <th>Trình duyệt</th>
                                <th>Thiết bị</th>
                                <th>Địa chỉ IP</th>
                                <th>Thời gian đăng nhập</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TRINH_DUYET</td>
                                    <td>@item.THIET_BI</td>
                                    <td>@item.DIA_CHI_IP</td>
                                    <td>@item.THOIGIAN</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-center align-items-center" style="min-height: 250px;">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 3rem;"></i>
                        <h5 class="mt-3 text-muted">Không có dữ liệu lịch sử đăng nhập</h5>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        #login-history-container .card {
            border-radius: 1rem;
            border: none;
        }

        #login-history-container .card-header {
            background: linear-gradient(to right, #007bff, #0056b3);
            padding: 1rem 1.5rem;
        }

        #login-history-container h4 {
            font-weight: 600;
        }

        #login-history-container table {
            font-size: 0.95rem;
        }

        #login-history-container th,
        #login-history-container td {
            vertical-align: middle !important;
            text-align: center;
        }

        #login-history-container .alert {
            font-size: 0.95rem;
            padding: 0.75rem 1rem;
        }
    </style>
}
