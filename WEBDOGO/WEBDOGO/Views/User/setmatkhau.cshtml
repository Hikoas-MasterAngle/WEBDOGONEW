@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đặt Lại Mật Khẩu</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <style>
        body {
            background: linear-gradient(to right, #6dd5fa, #2980b9);
            font-family: 'Segoe UI', sans-serif;
        }

        .wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .otp-form {
            background: #ffffff;
            padding: 2rem 2.5rem;
            border-radius: 1rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 420px;
        }

            .otp-form h1 {
                font-size: 1.75rem;
                font-weight: bold;
                text-align: center;
                margin-bottom: 1.5rem;
                color: #2c3e50;
            }

        .input-box {
            position: relative;
            margin-bottom: 1.5rem;
        }

            .input-box input {
                width: 100%;
                padding: 0.75rem 2.5rem 0.75rem 1rem;
                border: 1px solid #ced4da;
                border-radius: 0.5rem;
                font-size: 1rem;
            }

            .input-box i {
                position: absolute;
                top: 50%;
                right: 1rem;
                transform: translateY(-50%);
                color: #6c757d;
                font-size: 1.2rem;
            }

        .submit-btn button {
            width: 100%;
            padding: 0.6rem;
            font-size: 1rem;
            border-radius: 0.5rem;
            background-color: #007bff;
            color: white;
            border: none;
            font-weight: 500;
            transition: background-color 0.3s;
        }

            .submit-btn button:hover {
                background-color: #0056b3;
            }

        .back-home {
            text-align: center;
            margin-top: 1rem;
        }

            .back-home a {
                color: #007bff;
                text-decoration: none;
                font-weight: 500;
            }

                .back-home a:hover {
                    text-decoration: underline;
                }

        .alert-message {
            margin-bottom: 1rem;
            text-align: center;
            color: #dc3545;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <form action="@Url.Action("setmatkhau", "User")" method="post" class="otp-form">
            @Html.AntiForgeryToken()
            <h1>Cập Nhập Lại Mật Khẩu</h1>

            @if (ViewBag.ThongBao != null)
            {
                <div class="alert-message">
                    @ViewBag.ThongBao
                </div>
            }

            <div class="input-box">
                <input type="password" name="newpassword" placeholder="Mật khẩu mới..." required maxlength="50" />
                <i class='bx bx-lock-alt'></i>
            </div>

            <div class="input-box">
                <input type="password" name="replaynewpassword" placeholder="Nhập lại mật khẩu..." required maxlength="50" />
                <i class='bx bx-lock'></i>
            </div>

            <div class="submit-btn">
                <button type="submit">Xác nhận</button>
            </div>

            <div class="back-home">
                <p>Quay lại trang chủ? <a href="@Url.Action("Trangchu","Trangchu")">Trang chủ</a></p>
            </div>
        </form>
    </div>
</body>
</html>
