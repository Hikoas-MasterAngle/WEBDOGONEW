<!--Body Cập Nhật Thông Tin -->
<div class="fullbody">
    <div class="Titleinf">
        <h1>Hồ Sơ Của Tôi</h1>
    </div>

    <!-- Hiển thị thông báo -->
    @if (TempData["thongbao"] != null)
    {
        <div class="alert alert-success">
            @TempData["thongbao"]
        </div>
    }

    <!-- Sử dụng form HTML thông thường -->
    @using (Html.BeginForm("capnhapthongtinnguoidung", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="maininf">
            <div class="upinf">
                <div>
                    <p>Tên Đăng Nhập:</p>
                    @Html.TextBoxFor(m => m.TENDANGNHAP, new { @readonly = "readonly" })
                </div>
                <div>
                    <p>Họ và Tên:</p>
                    @Html.TextBoxFor(m => m.HOVATEN, new { @required = "required" })
                </div>
                <div>
                    <p>Tuổi:</p>
                    @Html.TextBoxFor(m => m.TUOI, new { @type = "number", @required = "required" })
                </div>
                <div>
                    <p>Tỉnh:</p>
                    @Html.DropDownListFor(m => m.TINH, tinhthanh, "Chọn tỉnh thành", new { @class = "form-control" })
                </div>
                <div>
                    <p>Địa chỉ:</p>
                    @Html.TextBoxFor(m => m.DIACHICHITIET, new { @required = "required" })
                </div>
                <div>
                    <p>Email:</p>
                    @Html.TextBoxFor(m => m.EMAIL, new { @required = "required" })
                </div>
                <div>
                    <p>Số điện thoại:</p>
                    @Html.TextBoxFor(m => m.SDT, new { @required = "required" })
                </div>
                <div>
                    <p>Câp độ:</p>
                    @Html.TextBoxFor(m => m.CAPDO, new { @readonly = "readonly" })
                </div>
            </div>

            <div class="choseimg">
                <img src="~/IMG/No-sanpham/user.png" width="50%" height="50%">
            </div>
        </div>

        <div class="btnsub">
            <button type="submit" style="border-radius: 5px; width: 30%; height:40px;">Lưu</button>
        </div>
    }
</div>
