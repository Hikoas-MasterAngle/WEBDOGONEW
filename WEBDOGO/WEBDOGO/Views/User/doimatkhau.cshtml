
@{
    ViewBag.Title = "doimatkhau";
    Layout = "~/Views/Shared/_layouttrangchu.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px; border-radius: 20px;">
        <h3 class="text-center mb-4 text-primary">Đổi Mật Khẩu</h3>

        @using (Html.BeginForm("doimatkhau", "User", FormMethod.Post, htmlAttributes: new { id = "formdoimk" }))
        {
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="matkhaucu" class="form-label">Mật khẩu cũ</label>
                <input type="password" class="form-control" name="matkhaucu" required placeholder="Nhập mật khẩu cũ" maxlength="10" id="passwordold">
            </div>

            <div class="mb-3">
                <label for="matkhaumoi" class="form-label">Mật khẩu mới</label>
                <input type="password" class="form-control" name="matkhaumoi" required placeholder="Nhập mật khẩu mới" maxlength="10" id="passwordnew">
            </div>

            <div class="mb-4">
                <label for="xacnhan" class="form-label">Xác nhận mật khẩu mới</label>
                <input type="password" class="form-control" name="xacnhan" required placeholder="Nhập lại mật khẩu mới" maxlength="10" id="replaypasswordnew">
            </div>

            <button type="submit" class="btn btn-primary w-100">Xác nhận</button>
        }
    </div>
</div>

<script src="~/Scripts/chongxssdoimk.js"></script>