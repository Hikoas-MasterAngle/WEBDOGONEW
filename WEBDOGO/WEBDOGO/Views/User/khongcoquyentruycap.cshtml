@{
    ViewBag.Title = "khongcoquyentruycap";
    Layout = "~/Views/Shared/_layouttrangchu.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    /* CSS chỉ áp dụng cho phần Access Denied (403) */
    #access-denied-page {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f4f4f9;
        font-family: Arial, sans-serif;
    }

        #access-denied-page .card {
            width: 100%;
            max-width: 500px;
            padding: 3rem;
            border: none;
            border-radius: 1rem;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            background: #fff;
            text-align: center;
        }

        #access-denied-page h1 {
            font-size: 2.5rem;
            color: #dc3545;
            margin-bottom: 1.5rem;
            font-weight: bold;
        }

        #access-denied-page p {
            color: #6c757d;
            font-size: 1.1rem;
            margin-bottom: 2rem;
        }

        #access-denied-page .btn-primary {
            padding: 0.8rem 2rem;
            font-weight: 500;
            border-radius: 0.5rem;
            text-transform: uppercase;
            color: white;
            background-color: #007bff;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            #access-denied-page .btn-primary:hover {
                background-color: #0056b3;
            }

        #access-denied-page .bi-shield-lock-fill {
            font-size: 3rem;
            color: #dc3545;
            margin-bottom: 1rem;
        }
</style>

<!-- Phần trang thông báo không có quyền truy cập, với ID riêng 'access-denied-page' -->
<div id="access-denied-page">
    <div class="card">
        <div class="card-body">
            <h1>
                <i class="bi bi-shield-lock-fill"></i> 403 - Truy cập bị từ chối
            </h1>
            <p>Bạn không có quyền truy cập vào trang này. Vui lòng quay lại trang chủ hoặc liên hệ quản trị viên.</p>
            <a href="@Url.Action("Trangchu", "Trangchu")" class="btn-primary">
                Quay về trang chủ
            </a>
        </div>
    </div>
</div>
