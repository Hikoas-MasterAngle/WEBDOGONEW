@model IEnumerable<WEBDOGO.Models.SANPHAM>

@{
    ViewBag.Title = "Trangchu";
    Layout = "~/Views/Shared/_layouttrangchu.cshtml";
}

<p>@ViewBag.ServerName</p>
<!-- Nền trang -->
<div class="selection-three">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 phantieude">
                <h2 class="tieude">VẺ ĐẸP SANG TRỌNG</h2>
                <h1>GIÁ THÀNH ƯU ĐÃI</h1>
            </div>
            <div class="gachchanxanh"></div>
            <div class="col-xl-12">
                <button class="btn btnmuangay" onclick="location.href ='@Url.Action("showsanpham", "TrangChu")'">
                    MUA NGAY
                </button>
                <button class="btn btnxemthem">
                    XEM THÊM
                </button>
            </div>
        </div>
    </div>
</div>
<!--End nền trang-->
<!-- body 1-->
<div class="body1">
    <div class="container">
        <div class="row">
            <div class="col-xl-3">
                <!--Phần conten bên trái-->
                <div class="contenbanchay row">
                    <div class="tieudebanchay col-xl-12 col-12">
                        <h2>BÁN CHẠY</h2>
                    </div>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        if (i >= 6)
                        {
                            break;
                        }
                        <a href="@Url.Action("chitietsanpham", "TrangChu" , new {id = Model.ElementAt(i).MASANPHAM})" style="text-decoration: none; width: 100%;">
                            <div class="contenbanchay1 col-xl-12 col-6">
                                <div class="imgbanchay">
                                    <img src="@Model.ElementAt(i).ANHSANPHAM" alt="">
                                </div>
                                <div class="noidungbanchay">
                                    <p class="tensanphamnoidungbanchay" style="color: black">@Model.ElementAt(i).TENSANPHAM</p>
                                    <p class="gia" style="color: black">@Model.ElementAt(i).GIASANPHAM</p>
                                </div>
                            </div>
                        </a>
                    }
                </div>

                <div class="quangcao1">
                    <img src="noithat/quangcao/h3-banner1.jpg" alt="">
                </div>

                <div class="giamgia">
                    <div class="tieudegiamgia">
                        <h2>GIẢM GIÁ</h2>
                    </div>
                    <div class="slidesanpham1">
                        <swiper-container class="mySwiper" space-between="30" pagination="true" pagination-clickable="true">
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                if (i >= 10)
                                {
                                    break;
                                }

                                <swiper-slide>
                                    <a href="@Url.Action("chitietsanpham", "TrangChu" , new {id = Model.ElementAt(i).MASANPHAM})">
                                        <img src="@Model.ElementAt(i).ANHSANPHAM" alt="">
                                        <p class="tensanphamslide">@Model.ElementAt(i).TENSANPHAM</p>
                                        <p class="giasanphamslide">@Model.ElementAt(i).GIASANPHAM</p>
                                    </a>
                                </swiper-slide>
                            }
                        </swiper-container>
                    </div>
                </div>
            </div>
            <div class="col-xl-9 contenphai">
                <!--Phần conten bên phải-->
                <div class="row">
                    <div class="col-xl-6 quangcao2 col-12 col-md-12">
                        <button class="btn"></button>
                    </div>
                    <div class="col-xl-6 quangcao3 col-12 col-md-12">
                        <button class="btn"></button>
                    </div>
                </div>

                <div class="tieudephai1 col-md-12">
                    <h2>SẢN PHẨM TIÊU BIỂU</h2>
                    <p>Một Số Sản Phẩm Được Chúng Tôi Làm Tâm Huyết Nhất</p>
                </div>

                <div class="danhsachsanpham">
                    <div class="row">
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            if (i >= 9)
                            {
                                break;
                            }
                            else
                            {
                                <div class="tungsanpham">
                                    <a href="@Url.Action("chitietsanpham", "TrangChu" , new {id = Model.ElementAt(i).MASANPHAM})"><img src="@Model.ElementAt(i).ANHSANPHAM" alt=""></a>
                                    <p>@Model.ElementAt(i).TENSANPHAM</p>
                                    <p class="giasanpham">@Model.ElementAt(i).GIASANPHAM</p>
                                </div>
                            }
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
</div>
<!--End body1-->
