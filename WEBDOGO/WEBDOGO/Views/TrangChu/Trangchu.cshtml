                            break;
                        }
                        else
                        {
                            <swiper-slide>
                                <div class="btnslidetuonggophongthuy">
                                    <a href="@Url.Action("chitietsanpham", "TrangChu" , new {id = Model.ElementAt(i).MASANPHAM})"><img src="@Model.ElementAt(i).ANHSANPHAM" alt=""></a>
                                    <p class="">@Model.ElementAt(i).TENSANPHAM</p>
                                    <p class="giaslide">@Model.ElementAt(i).GIASANPHAM</p>
                                </div>
                            </swiper-slide>
                        }
                    }
                </swiper-container>
            </div>
        </div>
    </div>
</div>
<!--end body3-->


