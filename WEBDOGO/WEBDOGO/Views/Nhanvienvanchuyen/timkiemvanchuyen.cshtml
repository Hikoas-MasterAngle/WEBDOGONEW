@{
    ViewBag.Title = "timkiemvanchuyen";
    Layout = "~/Views/Shared/_Layoutvanchuyen.cshtml";

    var tk = (WEBDOGO.Models.NHANVIENVANCHUYEN)Session["taikhoan"];
}

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col" style="width: 50px;">Mã vận chuyển</th>
            <th scope="col" style="width: 150px;">Tên khách hàng</th>
            <th scope="col" style="width: 70px;">Số điện thoại</th>
            <th scope="col" style="width: 200px;">Sản phẩm</th>
            <th scope="col" style="width: 50px;">Số lượng</th>
            <th scope="col" style="width: 50px;">Số tiền</th>
            <th scope="col" style="width: 200px;">Ngày bắt đầu gửi</th>
            <th scope="col" style="width: 100px;">Chi phí vận chuyển</th>
            <th scope="col" style="width: 200px;">Trạng thái vận chuyển</th>
            <th scope="col" style="width: 50px;">Thao tác</th>
        </tr>
    </thead>

    <tbody>
        @if (ViewBag.vanchuyensanphamthuong != null)
        {
            foreach (var item in ViewBag.vanchuyensanphamthuong)
            {
                <tr>
                    <td>@item.sVANCHUYEN.MAVANCHUYEN</td>
                    <td>@item.kHACHHANG.HOVATEN</td>
                    <td>@item.kHACHHANG.SDT</td>
                    <td>@item.sSANPHAM.TENSANPHAM</td>
                    <td>@item.cHITIETHOADON.SOLUONG</td>
                    <td>@item.cHITIETHOADON.TONGTIEN</td>
                    <td>@item.sVANCHUYEN.NGAYBATDAUGUI</td>
                    <td>@item.sVANCHUYEN.CHIPHIVANCHUYEN</td>
                    <td>@item.sVANCHUYEN.TRANGTHAIVANCHUYEN</td>
                    <td class="tacvu">
                        @if (tk.VAITRO == "Trưởng VC")
                        {
                            <a class="nutthongtinchitiet" href="@Url.Action("chinhsuavanchuyenchitietsanpham", "Nhanvienvanchuyen", new { mavc = item.sVANCHUYEN.MAVANCHUYEN })">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Zm6-10.125a1.875 1.875 0 1 1-3.75 0 1.875 1.875 0 0 1 3.75 0Zm1.294 6.336a6.721 6.721 0 0 1-3.17.789 6.721 6.721 0 0 1-3.168-.789 3.376 3.376 0 0 1 6.338 0Z" />
                                </svg>
                            </a>
                        }
                        else
                        {
                            <a class="nutthongtinchitiet" href="@Url.Action("vanchuyencuatoi", "Nhanvienvanchuyen", new { mavc = item.sVANCHUYEN.MAVANCHUYEN })">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Zm6-10.125a1.875 1.875 0 1 1-3.75 0 1.875 1.875 0 0 1 3.75 0Zm1.294 6.336a6.721 6.721 0 0 1-3.17.789 6.721 6.721 0 0 1-3.168-.789 3.376 3.376 0 0 1 6.338 0Z" />
                                </svg>
                            </a>
                        }
                    </td>
                </tr>
            }
        }
        else if (ViewBag.vanchuyensanphamtyc != null)
        {
            foreach (var item in ViewBag.vanchuyensanphamtyc)
            {
                <tr>
                    <td>@item.sVANCHUYEN.MAVANCHUYEN</td>
                    <td>@item.kHACHHANG.HOVATEN</td>
                    <td>@item.kHACHHANG.SDT</td>
                    <td>@item.sANPHAMTHEOYEUCAU.LOAISANPHAM</td>
                    <td>@item.sANPHAMTHEOYEUCAU.SOLUONG</td>
                    <td>@item.sANPHAMTHEOYEUCAU.TONGSOTIENSANXUAT</td>
                    <td>@item.sVANCHUYEN.NGAYBATDAUGUI</td>
                    <td>@item.sVANCHUYEN.CHIPHIVANCHUYEN</td>
                    <td>@item.sVANCHUYEN.TRANGTHAIVANCHUYEN</td>
                    <td class="tacvu">
                        @if (tk.VAITRO == "Trưởng VC")
                        {
                            <a class="nutthongtinchitiet" href="@Url.Action("chinhsuavanchuyenchitietsanpham", "Nhanvienvanchuyen", new { mavc = item.sVANCHUYEN.MAVANCHUYEN })">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Zm6-10.125a1.875 1.875 0 1 1-3.75 0 1.875 1.875 0 0 1 3.75 0Zm1.294 6.336a6.721 6.721 0 0 1-3.17.789 6.721 6.721 0 0 1-3.168-.789 3.376 3.376 0 0 1 6.338 0Z" />
                                </svg>
                            </a>
                        }
                        else
                        {
                            <a class="nutthongtinchitiet" href="@Url.Action("vanchuyencuatoi", "Nhanvienvanchuyen", new { mavc = item.sVANCHUYEN.MAVANCHUYEN })">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Zm6-10.125a1.875 1.875 0 1 1-3.75 0 1.875 1.875 0 0 1 3.75 0Zm1.294 6.336a6.721 6.721 0 0 1-3.17.789 6.721 6.721 0 0 1-3.168-.789 3.376 3.376 0 0 1 6.338 0Z" />
                                </svg>
                            </a>
                        }
                    </td>
                </tr>
            }
        }
        else
            {
                <tr>
                    <td>
                        <p>Không tìm thấy được đơn vận chuyển nào có mã số hóa đơn trên.</p>
                    </td>
                </tr>
            }
    </tbody>
    </table>

