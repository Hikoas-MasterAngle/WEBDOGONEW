<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giao diện Admin</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/quanly.css")?v=@DateTime.Now.Ticks">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <div class="container1">

        <aside class="sidebar">
            <h2>Quản lý</h2>
            <ul>
                <li><a href="#" onclick="showSection('finance')">Quản lý nhân viên tài chính</a></li>
                <li><a href="#" onclick="showSection('workshop')">Quản lý nhân viên sản xuất</a></li>
                <li><a href="#" onclick="showSection('transport')">Quản lý nhân viên vận chuyển</a></li>
                <li><a href="#" onclick="showSection('customers')">Quản lý khách hàng</a></li>
                <li><a href="#" onclick="showSection('products')">Quản lý sản phẩm</a></li>
                <li><a href="#" onclick="showSection('yeucaulienhe')">Quản lý liên hệ</a></li>


                <button class="button-29" role="button" onclick="location.href='@Url.Action("dangxuat","Dangxuat")'">Đăng xuất</button>
            </ul>
        </aside>
        <main class="main-content">
            <h1>Chào mừng đến với Giao diện Quản lý Admin</h1>
            <!--quản lý nhân viên tài chính-->
            @Html.Action("shownhanvientaichinh", "ADMIN")

            <!--Quản lý sản phẩm-->
            @Html.Action("showsanpham", "ADMIN")

            <!--Quản lý nhân viên sản xuất-->
            @Html.Action("shownhanviensanxuat", "ADMIN")

            <!--Quản lý nhân viên vận chuyển-->
            @Html.Action("shownhanvienvanchuyen", "ADMIN")


            <!--Quản lý khách hàng-->
            @Html.Action("showkhachhang", "ADMIN")

            <!--Quản lý yêu cầu liên hệ của khách hàng-->
            @Html.Action("showlienhe", "ADMIN")


        </main>
    </div>
    <script src="~/Scripts/quanly.js" defer></script>
</body>
</html>

@RenderBody();
