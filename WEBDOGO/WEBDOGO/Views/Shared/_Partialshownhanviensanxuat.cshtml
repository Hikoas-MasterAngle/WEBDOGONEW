<div id="workshop" class="content-section" style="display: none;">
    <div class="tieudequanly">
        <h2>Quản lý nhân viên sản xuất</h2>
        <a class="themnguoi" href="@Url.Action("showdivthemnguoi", "ADMIN", new {kiemtra = "Nhân viên sản xuất"})">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            Thêm
        </a>
    </div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col" style="width: 100px;">ID</th>
                <th scope="col" style="width: 300px;">Tên nhân viên</th>
                <th scope="col" style="width: 100px;">Tuổi</th>
                <th scope="col" style="width: 400px;">Địa chỉ</th>
                <th scope="col" style="width: 300px;">Số CCCD</th>
                <th scope="col" style="width: 200px;">Tài khoản</th>
                <th scope="col" style="width: 200px;">Tác vụ</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.nHANVIENSANXUATs != null)
            {
                foreach (var item in ViewBag.nHANVIENSANXUATs)
                {
                    <tr>
                        <td>@item.MANHANVIENSANXUAT</td>
                        <td>@item.TENNHANVIENSANXUAT</td>
                        <td>@item.TUOI</td>
                        <td>@item.DIACHI</td>
                        <td>@item.SOCCCD</td>
                        <td>@item.TENDANGNHAP</td>
                        <td class="tacvu">
                            <a class="nutthongtinchitiet" href="@Url.Action("showchitietnvsx", "ADMIN", new { id = item.MANHANVIENSANXUAT })">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Zm6-10.125a1.875 1.875 0 1 1-3.75 0 1.875 1.875 0 0 1 3.75 0Zm1.294 6.336a6.721 6.721 0 0 1-3.17.789 6.721 6.721 0 0 1-3.168-.789 3.376 3.376 0 0 1 6.338 0Z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
