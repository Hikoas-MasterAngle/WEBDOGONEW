                            <label>Tên nhân viên</label>
                            @Html.TextBoxFor(m => m.nHANVIENVANCHUYENs.TENNHANVIENVANCHUYEN, new { @required = "required" })
                        </div>

                        <div class="form-group">
                            <label>Tuổi</label>
                            @Html.TextBoxFor(m => m.nHANVIENVANCHUYENs.TUOI, new { @required = "required" })
                        </div>

                        <div class="form-group">
                            <label>Địa chỉ</label>
                            @Html.TextAreaFor(m => m.nHANVIENVANCHUYENs.DIACHI, new { @required = "required" })
                        </div>

                        <div class="form-group">
                            <label>Số Điện Thoại</label>
                            @Html.TextBoxFor(m => m.nHANVIENVANCHUYENs.SDT, new { @required = "required" })
                        </div>

                        <div class="form-group">
                            <label>Số CCCD</label>
                            @Html.TextBoxFor(m => m.nHANVIENVANCHUYENs.SOCCCD, new { @required = "required" })
                        </div>
                    </div>

                    <!-- Cột 2 -->
                    <div class="form-column">
                        <div class="form-group">
                            <label>Tên đăng nhập:</label>
                            @Html.TextBoxFor(m => m.nHANVIENVANCHUYENs.TENDANGNHAP, new { @required = "required" })
                        </div>

                        <div class="form-group">
                            <label>Mật Khẩu:</label>
                            @Html.TextBoxFor(m => m.nHANVIENVANCHUYENs.MATKHAU, new { @required = "required" })
                        </div>

                        <div class="form-group">
                            <label>Vai trò:</label>
                            @Html.DropDownListFor(m => m.nHANVIENVANCHUYENs.VAITRO, VAITROVC, "Chọn vai trò cho nhân viên", new { @required = "required" })
                        </div>

                    </div>
                </div>

                <div class="form-group full-width">
                    <button type="submit" class="btn-save" style="background-color: mediumturquoise">Thêm</button>
                    <a href="@Url.Action("showtrangquanly","ADMIN")" class="btn-save" style="background-color: gray; margin-top: 50px">Quay lại</a>
                </div>
            }
        }
    </div>
</body>
</html>