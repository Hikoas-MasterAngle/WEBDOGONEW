<div id="products" class="content-section" style="display: none;">
    <div class="tieudequanly">
        <h2>Quản lý sản phẩm</h2>
        <a class="themnguoi" href="@Url.Action("themsanpham", "ADMIN")">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            Thêm
        </a>
    </div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col" style="width: 50px;">ID</th>
                <th scope="col" style="width: 100px;">Ảnh sản phẩm</th>
                <th scope="col" style="width: 200px;">Tên sản phẩm</th>
                <th scope="col" style="width: 100px;">Gía sản phẩm</th>
                <th scope="col" style="width: 100px;">Loại sản phẩm</th>
                <th scope="col" style="width: 150px;">Chất liệu</th>
                <th scope="col" style="width: 100px;">Số lượng</th>
                <th scope="col" style="width: 200px;">Tác vụ</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.sanphamlist != null)
            {
                foreach (var item in ViewBag.sanphamlist)
                {
                    string anhnhiusanpham = item.ANHSANPHAM;
                    string newanhnhiusanpham = anhnhiusanpham.Replace("../IMG", "/IMG");
                    <tr>
                        <td>@item.MASANPHAM</td>
                        <td><img src="@ViewBag.ServerName@newanhnhiusanpham" style="width: 100px; height: 100px" /></td>
                        <td>@item.TENSANPHAM</td>
                        <td>@item.GIASANPHAM</td>
                        <td>@item.LOAISANPHAM</td>
                        <td>@item.CHATLIEU</td>
                        <td>@item.SOLUONG</td>
                        <td class="tacvu">
                            <a class="nutthongtinchitiet" href="@Url.Action("showchitietsp", "ADMIN", new { id = item.MASANPHAM})">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Zm6-10.125a1.875 1.875 0 1 1-3.75 0 1.875 1.875 0 0 1 3.75 0Zm1.294 6.336a6.721 6.721 0 0 1-3.17.789 6.721 6.721 0 0 1-3.168-.789 3.376 3.376 0 0 1 6.338 0Z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
