<div id="yeucaulienhe" class="content-section" style="display: none;">
    <div class="tieudequanly">
        <h2>Quản lý liên hệ của khách hàng</h2>
    </div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col" style="width: 100px;">ID liên hệ</th>
                <th scope="col" style="width: 200px;">Tên khách hàng</th>
                <th scope="col" style="width: 100px;">Email</th>
                <th scope="col" style="width: 100px;">Số điện thoại</th>
                <th style="text-align: center" scope="col" width="350px">Lời nhắn</th>
                <th scope="col" style="width: 100px;">Liên hệ</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.lIENHEs != null)
            {
                foreach (var item in ViewBag.lIENHEs)
                {
                    <tr>
                        <td>@item.MALIENHE</td>
                        <td>@item.HOVATEN</td>
                        <td>@item.EMAIL</td>
                        <td>@item.SDT</td>
                        <td style="text-align: center">@item.LOINHAN</td>
                        <td class="tacvu">
                            <a class="nutthongtinchitiet" href="@Url.Action("showchitietlienhe", "ADMIN", new { id = item.MALIENHE})">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 9h3.75M15 12h3.75M15 15h3.75M4.5 19.5h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Zm6-10.125a1.875 1.875 0 1 1-3.75 0 1.875 1.875 0 0 1 3.75 0Zm1.294 6.336a6.721 6.721 0 0 1-3.17.789 6.721 6.721 0 0 1-3.168-.789 3.376 3.376 0 0 1 6.338 0Z" />
                                </svg>
                            </a>
                        </td>
                    </tr>

                }
            }
        </tbody>
    </table>
</div>
